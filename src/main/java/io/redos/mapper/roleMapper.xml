<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.redos.mapper.RoleMapper">

    <resultMap id="roleMap" type="role" >
        <id column="id" property="id" javaType="long" jdbcType="BIGINT"/>
        <result column="role_name" property="roleName" />
        <result column="notes" property="notes"/>
        <result column="sex" property="sex" jdbcType="VARCHAR" javaType="io.redos.entity.Sex" typeHandler="org.apache.ibatis.type.EnumTypeHandler"/>
    </resultMap>
    <select id="getRole" parameterType="long" resultMap="roleMap" >
      select id,role_name,notes,sex from role where id= #{id}
    </select>

    <insert id="insertRole" parameterType="role" >
        insert into role(id,role_name,notes,sex)VALUE (#{id},#{roleName},#{notes},#{sex})
    </insert>
    <delete id="deleteRole" parameterType="long">
        delete from role where id=#{id}
    </delete>
</mapper>